{
  // ╔══════════════════════════════════╗
  // ║           Modules Left           ║
  // ╚══════════════════════════════════╝

  // Custom Appmenu
  "custom/appmenu": {
    "format": " Nix", // It just works to make enough space for the nix icon :3
    "on-click": "rofi -show drun -replace",
    "tooltip": false
  },

  // Taskbar
  "wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 18,
    "spacing": 100,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close",
    "ignore-list": ["aAlacritty"]
  },

  // Hyprland Window
  "hyprland/window": {
    // Nothing here but me and you :3
  },

  // ╔══════════════════════════════════╗
  // ║         Modules Center           ║
  // ╚══════════════════════════════════╝

  // Workspaces
  "hyprland/workspaces": {
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "format": "",
    "format-icons": {
      "urgent": "",
      "active": "",
      "default": ""
    },
    "persistent-workspaces": {
      "1": [],
      "2": [],
      "3": [],
      "4": [],
      "5": []
    }
  },

  // ╔══════════════════════════════════╗
  // ║          Modules Right           ║
  // ╚══════════════════════════════════╝

  // Audio Group
  "group/audio": {
    "orientation": "inherit",
    "modules": ["pulseaudio#input", "pulseaudio#output"]
  },
  // Pulseaudio
  "pulseaudio#output": {
    "scroll-step": 5,
    "format": "{icon} {volume}%",
    "format-source": "{volume}%",
    "format-muted": " {format_source}",
    "format-icons": {
      "headset": "",
      "default": ["", "", ""]
    },
    "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"
  },
  "pulseaudio#input": {
    "scroll-step": 5,
    "format": "{format_source}",
    "format-source": "",
    "format-source-muted": "",
    "on-click": "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle"
  },

  // System tray
  "tray": {
    "icon-size": 21,
    "spacing": 10
  },

  // System Group?
  "group/status": {
    "orientation": "inherit",
    "modules": [
      "power-profiles-daemon",
      "battery",
      "network",
      "clock",
      "custom/power"
    ]
  },

  // Clock
  "clock": {
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": "{:%Y-%m-%d}"
  },

  // Powermenu
  "custom/power": {
    "format": "󰤆",
    "tooltip": false,
    "menu": "on-click",
    "menu-file": "~/.config/waybar/power_menu.xml",
    "menu-actions": {
      "poweroff": "poweroff",
      "reboot": "reboot",
      "suspend": "hyprlock & disown && systemctl suspend",
      "hibernate": "hyprlock & disown && systemctl hibernate",
      "lock": "hyprlock"
    }
  },

  // Power profile
  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "{profile}",
    "tooltip": true,
    "format-icons": {
      "default": "",
      "performance": "",
      "balanced": "",
      "power-saver": ""
    }
  },

  // Network
  "network": {
    "format-ethernet": "",
    "format-wifi": "{icon}",
    "format-disconnected": "󰌙",
    "format-icons": ["󰤯", "󰤟", "󰤢", "󰤥", "󰤨"],
    "tooltip-format-ethernet": "󰜷 {bandwidthUpBits} 󰜮 {bandwidthDownBits}",
    "tooltip-format-wifi": "󰜷 {bandwidthUpBits} 󰜮 {bandwidthDownBits} | Strength: {signalStrength}",
    "tooltip-disconnected": "No internet qwq"
  },

  // Battery
  "battery": {
    "states": {
      // "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon}   {capacity}%",
    "format-charging": "  {capacity}%",
    "format-plugged": "  {capacity}%",
    "format-alt": "{icon}  {time}",
    // "format-good": "", // An empty format will hide the module
    // "format-full": "",
    "format-icons": [" ", " ", " ", " ", " "]
  }
}
